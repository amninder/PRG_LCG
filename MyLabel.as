package  {	import flash.display.Sprite;	import flash.text.TextField;	import flash.text.TextFormat;		public class MyLabel extends Sprite {		public function MyLabel() {					}		public function renderTheLabel(x:Number, y:Number, chaurai:Number, lambai:Number, labelText:String, fontSize:Number, fontColor:uint):TextField {			var this_label:TextField = new TextField();			var format:TextFormat = new TextFormat();						format.font = "Times";			format.color = fontColor;			format.size = 0xFF0000;						this_label.text = labelText;			this_label.alwaysShowSelection = false;			this_label.x = x;			this_label.y = y;			this_label.width = chaurai;			this_label.height = lambai;			this_label.defaultTextFormat = format;			addChild(this_label);			return this_label;		}	}	}