package  {	import flash.display.Sprite;	import flash.filters.GlowFilter;	import flash.events.MouseEvent;		public class MyButton extends Sprite {		var rect:Sprite = new Sprite();		public function MyButton() {					}				public function createButton(lambai:Number, chaurai:Number, text:String, borderColor:uint, bodyColor:uint):Sprite{						rect.graphics.lineStyle(3, borderColor);			rect.graphics.beginFill(borderColor);			//rect.graphics.drawRect(0,0, lambai, chaurai);			rect.graphics.drawRoundRect(0,0,lambai,chaurai,10,10);			rect.graphics.endFill();			rect.addEventListener(MouseEvent.MOUSE_OVER, mouseOverEvent);			rect.addEventListener(MouseEvent.MOUSE_OUT, mouseOutEvent);						addChild(rect);			return rect;		}		public function mouseOverEvent(event:MouseEvent):void{			var glowFilter:GlowFilter = new GlowFilter();			rect.filters = [glowFilter];		}		public function mouseOutEvent(event:MouseEvent):void{			rect.filters = [];		}	}	}